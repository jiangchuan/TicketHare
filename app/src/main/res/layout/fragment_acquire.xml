<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/profile_image_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/profile_image_margin"
            android:src="@drawable/police_profile" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/profile_margin"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:id="@+id/police_name_textview"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1.3"-->
            <!--android:layout_marginTop="@dimen/profile_text_margin"-->
            <!--android:layout_marginLeft="@dimen/profile_text_margin" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="@dimen/profile_text_margin"
                android:layout_marginLeft="@dimen/profile_text_margin">

                <TextView
                    android:id="@+id/police_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/police_user_id_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/police_dept_textview"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/profile_text_margin"
                android:layout_marginLeft="@dimen/profile_text_margin"
                android:layout_marginBottom="@dimen/profile_text_margin" />

            <Button
                android:id="@+id/take_pic_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:layout_marginTop="@dimen/profile_button_margin"
                android:text="@string/acquire_start"
                android:layout_margin="@dimen/image_margin" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/fragment_bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />

        <TextView
            android:id="@+id/addressLonLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:text="@string/ticket_address_label" />

    </RelativeLayout>


</LinearLayout>